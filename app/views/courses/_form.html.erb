	<%= f.label :course_number%>
	<br />
	<%= f.number_field :course_number%>
</div>
<div class="field">
	<%= f.label :grade_scale_id %>
	<br />
	<%= f.number_field :grade_scale_id %>
</div>
<div class="field">
	<%= f.label :teacher_id %>
	<br />
	<%= f.collection_select :teacher_id, Teacher.find(:all), :id, :full_name %>
</div>

<div class="actions">
	<%= f.submit %>
</div>
<% end %>
